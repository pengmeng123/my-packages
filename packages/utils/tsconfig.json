{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2015", "DOM"],
    "baseUrl": ".",
    "outDir": "es"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib", "es"]
}

